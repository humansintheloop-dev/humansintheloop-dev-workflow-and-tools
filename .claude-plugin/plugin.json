{
  "name": "idea-to-code",
  "version": "1.0.0",
  "description": "Slash commands for the Humans-in-the-Loop idea-to-code workflow. Use with the workflow scripts at https://github.com/chrisrichardson/genai-development-workflow",
  "author": {
    "name": "Chris Richardson",
    "email": "crichardson@eventuate.io"
  },
  "repository": "https://github.com/chrisrichardson/genai-development-workflow",
  "license": "MIT",
  "keywords": ["workflow", "planning", "implementation", "tdd", "steel-thread"],
  "commands": [
    "./commands/claude-issue-report.md",
    "./commands/commit-changes.md",
    "./commands/commit-staged-changes.md",
    "./commands/precommit-check.md"
  ],
  "skills": [
    "./skills/commit-guidelines",
    "./skills/dockerfile-guidelines",
    "./skills/file-organization",
    "./skills/incremental-development",
    "./skills/plan-tracking",
    "./skills/tdd",
    "./skills/test-runner-java-gradle",
    "./skills/testing-scripts-and-infrastructure"
  ],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/session-recorder.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/session-recorder.js"
          },
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/issue-session-tagger.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/session-recorder.js"
          }
        ]
      }
    ]
  }
}
