{
  "name": "idea-to-code",
  "version": "1.0.20260228155633",
  "description": "Skills, slash commands and hooks for the Humans-in-the-Loop idea-to-code workflow. Use with the workflow scripts at https://github.com/chrisrichardson/genai-development-workflow",
  "author": {
    "name": "Chris Richardson",
    "email": "crichardson@eventuate.io"
  },
  "repository": "https://github.com/chrisrichardson/genai-development-workflow",
  "license": "Apache License, Version 2.0",
  "keywords": ["workflow", "planning", "implementation", "tdd", "steel-thread"],
  "commands": [
    "./commands/claude-issue-report.md",
    "./commands/commit-changes.md",
    "./commands/commit-staged-changes.md",
    "./commands/precommit-check.md",
    "./commands/review-design-doc.md"
  ],
  "skills": [
    "./skills/apply-design-patterns",
    "./skills/ask-a-friend",
    "./skills/commit-guidelines",
    "./skills/debugging-ci-failures",
    "./skills/dockerfile-guidelines",
    "./skills/file-organization",
    "./skills/github-workflow-gradle-template",
    "./skills/incremental-development",
    "./skills/plan-file-management",
    "./skills/plan-tracking",
    "./skills/tdd",
    "./skills/test-runner-java-gradle",
    "./skills/testing-scripts-and-infrastructure",
    "./skills/write-design-pattern",
    "./skills/find-usage",
    "./skills/git-conflict-resolution",
    "./skills/write-idea",
    "./skills/test-output-to-logfile"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/enforce-bash-conventions.js"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/session-recorder.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/session-recorder.js"
          },
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/issue-session-tagger.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/session-recorder.js"
          }
        ]
      }
    ]
  }
}
